<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    disableAnsi="false"
                    noConsoleNoAnsi="false"
                    pattern="(%d{HH:mm:ss}) [%highlight{%5p}{FATAL=bright magenta, ERROR=red, WARN=yellow, INFO=green, DEBUG=cyan, TRACE=blue}] :: %m :: %style{%C{1}.%M()}%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>

